<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#52f6ff"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo_final"
        android:layout_marginBottom="50dp"
        android:layout_alignBottom="@+id/centre" />

    <Button
        android:id="@+id/button_start"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/centre"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorAccent"
        android:onClick="game_start"
        android:text="@string/start" />

    <Button
        android:id="@+id/button_help"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/help"
        android:layout_marginTop="18dp"
        android:textColor="#FFF"
        android:layout_below="@+id/button_ranking"
        android:layout_alignEnd="@+id/button_start"
        android:layout_alignStart="@+id/button_start" />

    <ImageView
        android:id="@+id/centre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/button_ranking"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_alignEnd="@+id/button_start"
        android:layout_alignStart="@+id/button_start"
        android:layout_below="@+id/button_start"
        android:textColor="#FFF"
        android:layout_marginTop="18dp"
        android:onClick="goto_ranking"
        android:text="@string/ranking" />

</RelativeLayout>