<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toStartOf="@+id/catalog"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/plus" />

        <ImageView
            android:id="@+id/catalog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toStartOf="@+id/mail"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/oferty" />

        <ImageView
            android:id="@+id/mail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toStartOf="@+id/burger"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/mail" />

        <ImageView
            android:id="@+id/burger"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/burger" />

        <ImageView
            android:id="@+id/activation_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/plus"
            android:layout_alignStart="@id/plus"
            android:layout_alignBottom="@id/logo"
            android:visibility="invisible"
            app:srcCompat="@drawable/activation" />

        <ImageView
            android:id="@+id/activation_catalog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/catalog"
            android:layout_alignStart="@id/catalog"
            android:layout_alignBottom="@id/logo"
            android:visibility="invisible"
            app:srcCompat="@drawable/activation" />

        <ImageView
            android:id="@+id/activation_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/mail"
            android:layout_alignStart="@id/mail"
            android:layout_alignBottom="@id/logo"
            android:visibility="invisible"
            app:srcCompat="@drawable/activation" />

        <ImageView
            android:id="@+id/activation_burger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/burger"
            android:layout_alignStart="@id/burger"
            android:layout_alignBottom="@id/logo"
            android:visibility="invisible"
            app:srcCompat="@drawable/activation" />

    </RelativeLayout>
</LinearLayout>